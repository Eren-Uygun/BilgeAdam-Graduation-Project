@using PharmaceuticalWarehouseManagementSystem.KERNEL.Enum
@model PharmaceuticalWarehouseManagementSystem.ENTITY.Entity.Product

@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="card-header">
 
    <h4>Product Add</h4>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupplierID" class="control-label">SupplierCompanyName</label>
                <select asp-for="SupplierID" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfSuppliers,"ID".ToString(),"CompanyName"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label">CategoryName</label>
                <select asp-for="CategoryID" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfCategories,"ID","CategoryName"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="QuantityPerUnit" class="control-label"></label>
                <input asp-for="QuantityPerUnit" class="form-control" />
                <span asp-validation-for="QuantityPerUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitsInStock" class="control-label"></label>
                <input asp-for="UnitsInStock" class="form-control" />
                <span asp-validation-for="UnitsInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReorderLevel" class="control-label"></label>
                <select asp-for="ReorderLevel" class="control-label" asp-items="Html.GetEnumSelectList<ReorderLevel>()"></select>
                <span asp-validation-for="ReorderLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpiredDate" class="control-label"></label>
                <input asp-for="ExpiredDate" class="form-control" />
                <span asp-validation-for="ExpiredDate" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input class="form-control" type="file" name="files" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Discontinued" /> @Html.DisplayNameFor(model => model.Discontinued)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" id="Add" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>


<script>
    document
        .getElementById("Add")
        .addEventListener("click", function (e) { //e => event
            if (!confirm("Do you want to Add?")) {
                e.preventDefault(); // ! => don't want to do this
            } else {
                //want to do this! => maybe do something about it?

            }
        });

</script>
