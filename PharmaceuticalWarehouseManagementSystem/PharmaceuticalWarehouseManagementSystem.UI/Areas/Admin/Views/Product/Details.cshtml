@model PharmaceuticalWarehouseManagementSystem.ENTITY.Entity.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var imageUrl = "~/images/" + (Model.imageUrl ?? "noimage.jpg");
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <hr />
    <div class="row">
        <dt class="col-sm-2">
            <label>Image</label>
        </dt>

        <dd class="col-sm-2">
            <img class="block card-img-top" src="@imageUrl" asp-append-version="true" />
        </dd>
    </div>
    <hr />
    <dl class="row border-primary">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuantityPerUnit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantityPerUnit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpiredDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpiredDate)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning">Edit</a> |
    <a asp-action="List"  class="btn btn-info">Back to List</a>
</div>