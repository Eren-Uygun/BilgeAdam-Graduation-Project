@using Microsoft.AspNetCore.Identity
@using PharmaceuticalWarehouseManagementSystem.KERNEL.Enum


@model LoginViewModel;

@{
    ViewBag.Title = "User Login";
}

    <div class="container">
        <div class="card-header">
            <h1>LoginPage</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form id="Login" asp-controller="Account" asp-action="Login" asp-route-returnurl="" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="UserMail">Email</label>
                            <input asp-for="UserMail" placeholder="Please Enter Your Email" class="form-control" />
                            <span asp-validation-for="UserMail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" type="password" placeholder="Please Enter Your Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Role" class="control-label"></label>
                            <select asp-for="Role" asp-items="Html.GetEnumSelectList<Role>()" class="form-control"></select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                        <button type="submit" id="test" class="btn btn-primary">Login</button>
                    </form>
                </div>
            </div>
        </div>
        
    </div>

